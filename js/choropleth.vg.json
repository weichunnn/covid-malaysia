{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 400,
  "data": {
    "url": "data/ne_10m_malaysia.topojson",
    "format": {
      "type": "topojson",
      "feature": "ne_10m_admin_1_states_provinces"
    }
  },
  "projection": { "type": "equalEarth" },
  "layer": [
    {
      "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.name",
          "as": "note"
        }
      ],
      "mark": { "type": "geoshape", "fill": "lightgray", "stroke": "white" },
      "encoding": { "tooltip": { "field": "note" } }
    },
    {
      "transform": [
        {
          "lookup": "properties.name",
          "from": {
            "data": {
              "url": "data/vax_state.csv"
            },
            "key": "state",
            "fields": ["cumul", "static_pop"]
          }
        },
        {
          "calculate": "datum.cumul/datum.static_pop * 10000",
          "as": "Cases per 10,000 population"
        }
      ],
      "mark": { "type": "geoshape", "stroke": "white" },
      "encoding": {
        "color": {
          "field": "Cases per 10,000 population",
          "type": "quantitative",
          "scale": { "type": "log" }
        },
        "tooltip": [
          { "field": "properties.name", "type": "nominal", "title": "State" },
          {
            "field": "Cases per 10,000 population",
            "type": "quantitative",
            "format": ".3s"
          }
        ]
      }
    }
  ],
  "config": {
    "legend": {
      "orient": "bottom",
      "layout": { "expr": "", "bottom": { "anchor": "middle" } }
    }
  }
}
